{
  "name": "sous-chef-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend && npm run build --workspace=@sous-chef/api-types && npm run build --workspace=frontend",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern packages/backend/src/utils/auth.d.ts --ignore-pattern packages/backend/src/utils/auth.js",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-pattern packages/backend/src/utils/auth.d.ts --ignore-pattern packages/backend/src/utils/auth.js",
    "migrate:create": "npm run migrate:create --workspace=backend",
    "migrate:up": "npm run migrate:up --workspace=backend",
    "migrate:down": "npm run migrate:down --workspace=backend"
  },
  "devDependencies": {
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "zod": "^4.1.12"
  }
}
