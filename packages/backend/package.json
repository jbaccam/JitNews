{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:migrate": "node -e \"(async()=>{const { AppDataSource }=require('./dist/orm/data-source'); if(!AppDataSource.isInitialized) await AppDataSource.initialize(); console.log('DB ready'); process.exit(0)})().catch(e=>{console.error(e);process.exit(1)})\" && node dist/index.js",
    "typeorm": "node -r ts-node/register ../../node_modules/typeorm/cli.js -d src/orm/migrations-data-source.ts",
    "migrate:create": "npm run typeorm -- migration:generate src/orm/migrations/AutoMigration --pretty",
    "migrate:up": "npm run typeorm -- migration:run",
    "migrate:down": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@trpc/server": "^11.5.0",
    "better-auth": "^1.3.23",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^4.1.8",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
